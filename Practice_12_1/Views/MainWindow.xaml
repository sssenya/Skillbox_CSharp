<Window x:Class="Practice_12_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_12_1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" Width="800"
        MinHeight="600" MinWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="3"
            Margin="10"
            ItemsSource="{Binding Clients}"
            SelectedItem="{Binding SelectedClient}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1} {2}">
                                <Binding Path="FirstName" />
                                <Binding Path="SecondName" />
                                <Binding Path="MiddleName" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            DataContext="{Binding SelectedClient}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Перевод между счетами"/>
            <ComboBox
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                ItemsSource="{Binding Accounts}"
                SelectedItem="{Binding SelectedMoveMoneyAccFrom}"/>
            <ComboBox
                Grid.Row="0"
                Grid.Column="2"
                Margin="10"
                ItemsSource="{Binding Accounts}"
                SelectedItem="{Binding SelectedMoveMoneyAccTo}"/>
            <TextBox
                Grid.Row="0"
                Grid.Column="3"
                Margin="10"
                Text="{Binding MoneyToMove}"/>
            <Button
                Grid.Row="0"
                Grid.Column="4"
                Margin="10"
                Content="Перевести"
                Command="{Binding MoveBetweenAccsCommand}"/>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Перевод клиенту"/>
            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="10"/>
            <TextBox
                Grid.Row="2"
                Grid.Column="3"
                Margin="10"/>
            <Button
                Grid.Row="2"
                Grid.Column="4"
                Margin="10"
                Content="Перевести"/>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            DataContext="{Binding SelectedClient.DepAccountVM}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Депозитный счет"
                FontWeight="Bold"/>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                Content="Открыть"
                Command="{Binding OpeAccCommand}"/>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Content="Закрыть"
                Command="{Binding CloseAccCommand}"/>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Статус счета:"/>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding AccountStatus}"/>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Баланс счета:"/>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding AccountSum}"/>
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Дата открытия:"/>
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding AccountDate}"/>
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="Процент счета:"/>
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding AccountPercent}"/>

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="Пополнение счета"/>
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"
                Text="{Binding MoneyToAdd}"/>
            <Button
                Grid.Row="5"
                Grid.Column="2"
                Margin="5"
                Content="Пополнить"
                Command="{Binding AddMoneyCommand}"/>

        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            DataContext="{Binding SelectedClient.NonDepAccountVM}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Недепозитный счет"
                FontWeight="Bold"/>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                Content="Открыть"
                Command="{Binding OpeAccCommand}"/>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Content="Закрыть"
                Command="{Binding CloseAccCommand}"/>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Статус счета:"/>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding AccountStatus}"/>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Баланс счета:"/>
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding AccountSum}"/>
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Дата открытия:"/>
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding AccountDate}"/>
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="Процент счета:"/>
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding AccountPercent}"/>

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="Пополнение счета"/>
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"
                Text="{Binding MoneyToAdd}"/>
            <Button
                Grid.Row="5"
                Grid.Column="2"
                Margin="5"
                Content="Пополнить"
                Command="{Binding AddMoneyCommand}"/>
        </Grid>




    </Grid>
</Window>
